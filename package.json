{
  "name": "hw-fullstack-monorepo",
  "private": true,
  "workspaces": [
    "packages/backend/*",
    "packages/frontend/*",
    "packages/shared/*",
    "packages/tooling/*"
  ],
  "scripts": {
    "bootstrap": "bun install",
    "dev": "lerna run dev --parallel",
    "start:all": "bash scripts/start-all.sh",
    "test": "lerna run test --stream",
    "test:e2e": "playwright test -c packages/frontend/web/playwright.config.mjs",
    "lint": "lerna run lint --stream",
    "typecheck": "lerna run typecheck --stream",
    "rag:index": "lerna run rag:index --scope @tooling/rag",
    "rag:search": "lerna run rag:search --scope @tooling/rag --",
    "gh:bootstrap": "bash scripts/gh-bootstrap.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "lerna": "^8.0.0"
  }
}
